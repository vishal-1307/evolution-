:root {
  /* Color Palette - Black, Red, White */
  --color-bg: #000000;
  --color-bg-alt: #111111;
  --color-primary: #E50914;
  /* Vibrant Red */
  --color-primary-dark: #B20710;
  --color-secondary: #FFFFFF;
  /* High contrast white */
  --color-text: #FFFFFF;
  --color-text-muted: #CCCCCC;
  --color-border: #333333;

  /* Typography */
  --font-heading: 'Oswald', sans-serif;
  /* Strong, bold headers */
  --font-body: 'Inter', sans-serif;
  /* Clean readable body */
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: var(--font-body);
  overflow-x: hidden;
  line-height: 1.6;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-heading);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

a {
  text-decoration: none;
  color: inherit;
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: #111;
}

::-webkit-scrollbar-thumb {
  background: var(--color-primary);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-primary-dark);
}

/* Utilities */
.highlight {
  color: var(--color-primary);
}

.text-center {
  text-align: center;
}

.btn-primary {
  background: var(--color-primary);
  color: #fff;
  padding: 12px 30px;
  border-radius: 5px;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-primary:hover {
  background: var(--color-primary-dark);
  transform: translateY(-2px);
}